<!-- <div class="edit-form"> -->
  <div class="form-wrapper">
    <!-- <div class="upload-form-background"></div> -->
<div class="form-background" ></div>
    <div class="form-container col-sm-5">
      <div class="form-card">
        <h1>Add a New Experience</h1>
        <%= simple_form_for(@experience) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :title %>
          <%= f.input :category, :collection => Experience::CATEGORIES %>
          <%= f.input :description %>
          <%= f.input :duration %>
          <%= f.input :address %>
          <%= f.input :price %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Add", :class => "form-button" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

