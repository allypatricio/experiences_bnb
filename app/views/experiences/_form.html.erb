<div class="edit-form">
  <div class="form-wrapper">
    <div class="new-form-background"></div>

    <div class="form-container col-sm-5">
      <div class="new-form-card">
        <h1>Add a new experience</h1>
        <%= simple_form_for(@experience) do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :title %>
          <%= f.input :category, :collection => Experience::CATEGORIES %>
          <%= f.input :description %>
          <%= f.input :duration, as: :numeric %>
          <%= f.input :address %>
          <%= f.input :price %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

